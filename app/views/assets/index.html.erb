<h1>Asset</h1>

<table>
  <thead>
  <tr>
    <th><%= current_user.name %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>


  <!-- Listing Files -->
  <% @assets.each do |asset| %>
      <tr>
        <td><% file = asset.file_upload.to_s %>
          <%= File.basename(file,File.extname(file)).capitalize %></td>
        <td> <%= File.extname(file).delete('.').upcase%></td>
        <td><%= link_to 'Show', asset %></td>
        <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Asset', new_asset_path %>
